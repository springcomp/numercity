	location /perimeter-views {
		include		/etc/nginx/proxy_params;
		proxy_pass	http://view_api;
	}
	location /population-views {
		include		/etc/nginx/proxy_params;
		proxy_pass	http://view_api;
	}
	location /profile-authority {
		include		/etc/nginx/proxy_params;
		proxy_pass	http://view_api;
	}
	location /group-views {
		include		/etc/nginx/proxy_params;
		proxy_pass	http://view_api;
